<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_notice"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_noticeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course Name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ll_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView_item"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/textView_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Item: ..."
        android:layout_alignBottom="@+id/ll_icon"
        android:layout_alignLeft="@+id/textView_courseName"
        android:layout_alignStart="@+id/textView_courseName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/textView_createdAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_icon"
        android:layout_alignRight="@+id/textView_item"
        android:text="createdAt: ..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignStart="@+id/textView_noticeMessage" />

    <!--android:layout_alignParentLeft="false"-->
    <!--android:layout_alignBottom="@+id/ll_icon"-->
    <!--android:layout_alignLeft="@+id/textView_courseName"-->
    <!--android:layout_alignStart="@+id/textView_courseName"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_alignParentEnd="true"-->

</RelativeLayout>